<!DOCTYPE html>
<html>
<h1>To Do List</h1>
<div id="login_menu">
<div id="user_nav">
  <ul>
    <li style="float:left;border-right-style:solid"><%=link_to "Home", tasks_path %></li>
  <% if current_user %>
   <li> <%= link_to "Log out", log_out_path %></li>
    <p style=" float:right; background-color:#E2E3DF;">Logged in as <%= current_user.email %></p>

  <% else %>
   <li><%= link_to "Register", sign_up_path %></li>
   <li><%= link_to "Log in", log_in_path %></li>
  </ul>
  <% end %>
</div>
</div>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
<head>
  <title>Todolist</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
<%= yield %>
</div>
<div id="vert_menu">
  </div>
</body>
</html>
